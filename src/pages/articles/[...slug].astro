---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('articles');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'articles'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
	<article class="max-w-3xl mx-auto">
        <header class="mb-10 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4 leading-tight">{post.data.title}</h1>
            <p class="text-xl text-gray-600 mb-6">{post.data.description}</p>
            <div class="flex items-center justify-center gap-4 text-sm text-gray-500">
                <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString(undefined, { dateStyle: 'long' })}
                </time>
                {post.data.tags && post.data.tags.length > 0 && (
                     <>
                        <span>&bull;</span>
                        <div class="flex gap-2">
                            {post.data.tags.map(tag => (
                                <span class="bg-gray-100 px-2 py-1 rounded-full text-gray-600 text-xs font-semibold uppercase tracking-wide">
                                    {tag}
                                </span>
                            ))}
                        </div>
                    </>
                )}
            </div>
        </header>

        <div class="prose prose-lg prose-slate mx-auto prose-headings:font-bold prose-a:text-blue-600 hover:prose-a:text-blue-800">
		    <Content />
        </div>
	</article>
</BaseLayout>
