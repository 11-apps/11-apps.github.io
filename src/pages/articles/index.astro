---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const articles = (await getCollection('articles')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Articles">
	<h1 class="text-3xl font-bold mb-8">Articles</h1>
	<div class="grid gap-8">
		{articles.map((article) => (
			<article class="flex flex-col sm:flex-row gap-4 sm:gap-8 items-start">
                <div class="flex-1">
                    <a href={`/articles/${article.slug}`} class="block group">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                            {article.data.title}
                        </h2>
                        <p class="text-gray-600 mb-3 leading-relaxed">
                            {article.data.description}
                        </p>
                         <div class="flex items-center gap-4 text-sm text-gray-500">
                            <time datetime={article.data.pubDate.toISOString()}>
                                {article.data.pubDate.toLocaleDateString()}
                            </time>
                            {article.data.tags && (
                                <div class="flex gap-2">
                                    {article.data.tags.map(tag => (
                                        <span class="bg-gray-100 px-2 py-0.5 rounded text-gray-600 text-xs font-medium">#{tag}</span>
                                    ))}
                                </div>
                            )}
                        </div>
                    </a>
                </div>
			</article>
		))}
        {articles.length === 0 && <p class="text-gray-500">No articles found.</p>}
	</div>
</BaseLayout>
